# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/collabsphere_db

# ==========================================
# JWT AUTHENTICATION
# ==========================================
SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================
# CORS SETTINGS
# ==========================================
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# ==========================================
# API SETTINGS
# ==========================================
API_V1_PREFIX=/api/v1
PROJECT_NAME=CollabSphere
DEBUG=True

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@collabsphere.edu
EMAILS_FROM_NAME=CollabSphere

# ==========================================
# REDIS (Optional - for caching/real-time)
# ==========================================
REDIS_URL=redis://localhost:6379/0

# ==========================================
# CLOUDINARY (Optional - for file storage)
# ==========================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==========================================
# AI INTEGRATION (Google Gemini)
# ==========================================
GEMINI_API_KEY=your-gemini-api-key

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO

# ==========================================
# SECURITY
# ==========================================
ALLOWED_HOSTS=["localhost", "127.0.0.1"]